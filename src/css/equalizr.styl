selection()
	background #111
	color #eee
	text-shadow none

::selection
	selection()

::-moz-selection
	selection()

placeholder()
	color #111

::-webkit-input-placeholder
	placeholder()

:-moz-placeholder
	placeholder()

::-moz-placeholder
	placeholder()

:-ms-input-placeholder
	placeholder()

:hover,
:focus
	outline none
	-webkit-tap-highlight-color rgba(0, 0, 0, 0)

html
	-webkit-font-smoothing antialiased

a
	color inherit

button,
input
	line-height normal
	border none
	border-radius 0
	appearance none

a,
button,
input[type=button],
input[type=reset],
input[type=submit]
	cursor pointer
	text-decoration none

input[type=search]
	&::-webkit-search-decoration,
	&::-webkit-search-cancel-button
		display none
